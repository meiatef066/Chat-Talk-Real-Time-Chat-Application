<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="786.0" prefWidth="1327.0" styleClass="bg-primary" stylesheets="@../../../../CSS/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.system.chattalkdesktop.notificationPage.NotificationController">
    <left>
        <fx:include fx:id="sidebarNavigator" source="../common/SidebarNavigator.fxml" />
    </left>
    <center>
        <VBox alignment="TOP_CENTER" maxHeight="Infinity" maxWidth="Infinity" prefHeight="788.0" prefWidth="1196.0" spacing="20.0" styleClass="bg-primary">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label styleClass="text-primary" text="Notifications" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="12.0">
                <TextField fx:id="searchField" maxWidth="Infinity" prefHeight="48.0" promptText="Search notifications..." styleClass="search-input" HBox.hgrow="ALWAYS" />
                <Button fx:id="refreshButton" onAction="#refreshNotifications" prefHeight="51.0" prefWidth="120.0" styleClass="button-primary" text="Refresh" />
                <Button fx:id="clearAllButton" onAction="#clearAllNotifications" prefHeight="51.0" prefWidth="150.0" styleClass="button-reject" text="Clear All" />
            </HBox>
            <ListView fx:id="notificationList" maxHeight="Infinity" maxWidth="Infinity" prefHeight="550.0" prefWidth="950.0" styleClass="group-list" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>
</BorderPane>
